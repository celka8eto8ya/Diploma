                <a class=" dropdown-item col-4" asp-action="ExportData" asp-route-projectId="@ViewBag.Project.Id"
                   asp-route-format="Xml" asp-controller="Operation">

                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-filetype-xml" viewBox="0 0 20 20">
