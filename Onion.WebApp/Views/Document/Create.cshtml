@model Onion.AppCore.DTO.StepDTO

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Project/Show">Projects</a></li>
        <li class="breadcrumb-item"><a  asp-action="Show" asp-route-id="@ViewBag.Project.ProjectDTO.Id" asp-controller="Step">Steps</a></li>
        <li class="breadcrumb-item active" aria-current="page">Create Step</li>
    </ol>
</nav>

<form asp-action="Create" asp-controller="Step" asp-anti-forgery="true" method="post" enctype="multipart/form-data">

    <div class="container col-10 ">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
    </div>
    <div class="container col-10 ">
        <div class="InputSuccess">@ViewBag.CreateResult</div>
    </div>

    <div class="container col-5 justify-content-center mt-3 ">
        <h2 class="text-center">Create Step:</h2>


        <div class="row mt-4 justify-content-start">
            <div class="col-3">
                <label class="form-label" asp-for="Name">Name:</label>
            </div>
            <div class="col-9">
                <input type="text" name="Name" class="form-control" asp-for="Name" />
                <span asp-validation-for="Name" class="col-8" />
            </div>
        </div>

        <div class="row mt-3 justify-content-start">
            <div class="col-3">
                <label class="form-label" asp-for="Description">Description:</label>
            </div>
            <div class="col-9">
                <input type="text" name="Description" class="form-control" asp-for="Description" />
                <span asp-validation-for="Description" class="col-8" />
            </div>
        </div>

        <div class="row mt-3 justify-content-start">
            <div class="col-3">
                <label class="form-label" asp-for="TechStack">Tech. Stack:</label>
            </div>
            <div class="col-9">
                <input type="text" name="TechStack" class="form-control" asp-for="TechStack" />
                <span asp-validation-for="TechStack" class="col-8" />
            </div>
        </div>

        <input type="text" name="ProjectId" asp-for="ProjectId" value="@ViewBag.Project.ProjectDTO.Id" hidden />

        <div class="row mt-3 justify-content-start">
            <div class="col-3">
                <label class="form-label">For project (Name):</label>
            </div>
            <div class="col-9">
                <input type="text" class="form-control" readonly value="@ViewBag.Project.ProjectDTO.Name" />
            </div>
        </div>

        <div class="row mb-5 mt-4 pb-4 justify-content-center">
            <div class="col-4 ">
                <a asp-action="Show" asp-route-id="@ViewBag.Project.ProjectDTO.Id" asp-controller="Step" class="btn btn-primary  NewProject ">Back</a>
            </div>
            <div class="col-7">
                <input class="btn btn-primary  NewProject col-7" type="submit" value="Create">
            </div>
        </div>

    </div>
</form>



@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}