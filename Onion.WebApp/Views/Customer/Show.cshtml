@model IEnumerable<Onion.AppCore.DTO.CustomerDTO>

<div class="container mainSize col-12">
    <div class="row rowSize">
        
        <div class="col CreateProj">
            @if (User.IsInRole("Admin"))
            {
                <div class="row  mt-3 mb-3 pl-0 col-11">
                    <a href="~/Customer/Create" class="btn btn-primary col-3 ">New Customer</a>
                </div>
            }

            <table class="table table-striped table-hover mt-4 col-12 FullTable">
                <thead>
                    <tr>

                        <th scope="col">
                            №
                        </th>

                        <th scope="col">
                            <a class="m-1">Name</a>
                        </th>

                        <th scope="col">
                            <a class="m-1">Address</a>
                        </th>

                        <th scope="col">
                            <a class="m-1">Create Date</a>
                        </th>

                        <th scope="col">
                            <a class="m-1">Update Date</a>
                        </th>

                        <th scope="col">
                            <a class="m-1">Phone Number</a>
                        </th>

                        <th scope="col">
                            <a class="m-1">Investments ($)</a>
                        </th>
                        <th scope="col">
                            <a class="m-1">Cooperation (Month)</a>
                        </th>
                        <th scope="col">
                            <a class="m-1">Project</a>
                        </th>

                        @if (User.IsInRole("Admin"))
                        {
                            <th scope="col">
                                <a class="m-1">Options</a>
                            </th>
                        }

                    </tr>
                </thead>
                <tbody>
                    @{ int i = 1;

                        foreach (var customerDTO in Model)
                        {
                            <tr>

                                <td scope="row">@i</td>
                                <td scope="row">@customerDTO.Name</td>
                                <td scope="row">@customerDTO.Address</td>
                                <td scope="row">@customerDTO.CreateDate.ToShortDateString()</td>
                                <td scope="row">@customerDTO.UpdateDate.ToShortDateString()</td>
                                <td scope="row">@customerDTO.PhoneNumber</td>
                                <td scope="row">@customerDTO.InvestmentAmount</td>
                                <td scope="row">@customerDTO.CooperationTime</td>
                                <td scope="row">@customerDTO.ProjectName</td>
                                @if (User.IsInRole("Admin"))
                                {
                                    <td class="col-1 px-4">

                                        <a class="icons" data-title="Edit" asp-action="Edit" asp-route-id="@customerDTO.Id" asp-controller="Customer">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                                                 class="bi bi-pencil-square" viewBox="0 0 20 20">
                                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                                <path fill-rule="evenodd"
                                                      d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                            </svg>
                                        </a>

                                        <a class="icons third" data-title="Remove" asp-controller="Customer" asp-route-id="@customerDTO.Id" asp-action="Delete">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                                                 class="bi bi-trash" viewBox="0 0 20 20">
                                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                                <path fill-rule="evenodd"
                                                      d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                                            </svg>
                                        </a>
                                    </td>
                                }
                            </tr>
                            i++;

                        } }
                </tbody>
            </table>
        </div>
    </div>

</div>

