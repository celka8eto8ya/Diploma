@model Onion.AppCore.DTO.CustomerDTO




<form asp-action="Edit" asp-controller="Customer" asp-anti-forgery="true" method="post" enctype="multipart/form-data">

    <div class="container col-10 ">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
    </div>
    <div class="container col-10 ">
        <div class="InputSuccess">@ViewBag.CreateResult</div>
    </div>


    <input type="text" name="Id" asp-for="Id" hidden />
    <input type="text" name="CreateDate" asp-for="CreateDate" hidden />
    <input type="text" name="ProjectId" asp-for="ProjectId" hidden />
    <input type="text" name="RoleId" asp-for="RoleId" hidden />



    <div class="container col-5 justify-content-center mt-3 ">
        <h2 class="text-center">Edit Customer:</h2>

        <div class="row mt-4 justify-content-start">
            <div class="col-3">
                <label class="form-label" asp-for="Name">Name:</label>
            </div>
            <div class="col-9">
                <input type="text" name="Name" class="form-control" asp-for="Name" />
                <span asp-validation-for="Name" class="col-8" />
            </div>
        </div>

        <div class="row mt-4 justify-content-start">
            <div class="col-3">
                <label class="form-label" asp-for="Address">Address:</label>
            </div>
            <div class="col-9">
                <input type="text" name="Address" class="form-control" asp-for="Address" />
                <span asp-validation-for="Address" class="col-8" />
            </div>
        </div>

        <div class="row mt-4 justify-content-start">
            <div class="col-3">
                <label class="form-label" asp-for="PhoneNumber">Phone Number:</label>
            </div>
            <div class="col-9">
                <input type="tel" name="PhoneNumber" class="form-control" placeholder="+375 (33) 123-45-67" minlength="9" maxlength="40"  asp-for="PhoneNumber" />
                <span asp-validation-for="PhoneNumber" class="col-8" />
            </div>
        </div>

        <div class="row mt-4 justify-content-start">
            <div class="col-3">
                <label class="form-label" asp-for="InvestmentAmount">Investment Amount ($):</label>
            </div>
            <div class="col-9">
                <input type="number" name="InvestmentAmount" class="form-control" asp-for="InvestmentAmount" />
                <span asp-validation-for="InvestmentAmount" class="col-8" />
            </div>
        </div>

        <div class="row mt-4 justify-content-start">
            <div class="col-3">
                <label class="form-label" asp-for="CooperationTime">Cooperation Time (Month):</label>
            </div>
            <div class="col-9">
                <input type="text" name="CooperationTime" class="form-control" asp-for="CooperationTime" />
                <span asp-validation-for="CooperationTime" class="col-8" />
            </div>
        </div>

        <div class="row  justify-content-center mb-5">
            <input class="btn btn-primary mt-4 col-4 NewProject" type="submit" value="Edit">
        </div>
    </div>
</form>



@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}