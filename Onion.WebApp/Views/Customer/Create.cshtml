@model Onion.AppCore.DTO.FullCustomerDTO



<form asp-action="Create" asp-controller="Customer" asp-anti-forgery="true" method="post" enctype="multipart/form-data">

    <div class="container col-10 ">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
    </div>
    <div class="container col-10 ">
        <div class="InputSuccess">@ViewBag.CreateResult</div>
    </div>

    <div class="container col-5 justify-content-center mt-3 ">
        <h2 class="text-center">Create Customer:</h2>

        <div class="row mt-4 justify-content-start">
            <div class="col-3">
                <label class="form-label" asp-for="CustomerDTO.Name">Name:</label>
            </div>
            <div class="col-9">
                <input type="text" name="CustomerDTO.Name" class="form-control" asp-for="CustomerDTO.Name" />
                <span asp-validation-for="CustomerDTO.Name" class="col-8" />
            </div>
        </div>


        <div class="row mt-2 justify-content-start">
            <div class="col-3">
                <label class="form-label" asp-for="AuthenticationDTO.Email">Email:</label>
            </div>
            <div class="col-9">
                <input type="email" name="AuthenticationDTO.Email" class="form-control" asp-for="AuthenticationDTO.Email" />
                <span asp-validation-for="AuthenticationDTO.Email" class="col-8" />
            </div>
        </div>

        <div class="row mt-2 justify-content-start">
            <div class="col-3">
                <label class="form-label" asp-for="AuthenticationDTO.Password">Password:</label>
            </div>
            <div class="col-9">
                <input type="password" name="AuthenticationDTO.Password" class="form-control" asp-for="AuthenticationDTO.Password" />
                <span asp-validation-for="AuthenticationDTO.Password" class="col-8" />
            </div>
        </div>

        <div class="row mt-2 justify-content-start">
            <div class="col-3">
                <label class="form-label" asp-for="CustomerDTO.Address">Address:</label>
            </div>
            <div class="col-9">
                <input type="text" name="CustomerDTO.Address" class="form-control" asp-for="CustomerDTO.Address" />
                <span asp-validation-for="CustomerDTO.Address" class="col-8" />
            </div>
        </div>

        <div class="row mt-2 justify-content-start">
            <div class="col-3">
                <label class="form-label" asp-for="CustomerDTO.PhoneNumber">Phone Number:</label>
            </div>
            <div class="col-9">
                <input type="tel" name="CustomerDTO.PhoneNumber" class="form-control" asp-for="CustomerDTO.PhoneNumber" />
                <span asp-validation-for="CustomerDTO.PhoneNumber" class="col-8" />
            </div>
        </div>


        <div class="row mt-2 justify-content-start">
            <div class="col-3">
                <label class="form-label" asp-for="CustomerDTO.InvestmentAmount">Investment Amount ($):</label>
            </div>
            <div class="col-9">
                <input type="number" name="CustomerDTO.InvestmentAmount" class="form-control" asp-for="CustomerDTO.InvestmentAmount" />
                <span asp-validation-for="CustomerDTO.InvestmentAmount" class="col-8" />
            </div>
        </div>


        <div class="row mt-2 justify-content-start">
            <div class="col-3">
                <label class="form-label" asp-for="CustomerDTO.CooperationTime">Cooperation Time (Month):</label>
            </div>
            <div class="col-9">
                <input type="number" name="CustomerDTO.CooperationTime" class="form-control" asp-for="CustomerDTO.CooperationTime" />
                <span asp-validation-for="CustomerDTO.CooperationTime" class="col-8" />
            </div>
        </div>

        <div class="row  mt-2 justify-content-start">
            <div class="col-3">
                <label class="form-label" asp-for="CustomerDTO.ProjectId">Project:</label>
            </div>
            <div class="col-9">

                <select class="form-select form-control" aria-label="Select" asp-for="CustomerDTO.ProjectId">
                    @{

                        foreach (var project in ViewBag.Projects)
                        {
                            <option class="form-control" selected value="@project.ProjectDTO.Id">@project.ProjectDTO.Name</option>
                        }
                    }
                </select>
                <span asp-validation-for="CustomerDTO.ProjectId" class="col-8"></span>
            </div>
        </div>


        <div class="row  justify-content-center mb-5 pb-4">
            <input class="btn btn-primary mt-4 col-4 NewProject" type="submit" value="Create">
        </div>
    </div>
</form>



@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}