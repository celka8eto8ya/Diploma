@model IEnumerable<Onion.AppCore.DTO.FullProjectDTO>


<div class="container mainSize col-12">
    <div class="row rowSize">

        <div class="CreateProj col-12 pr-0">
            @if (User.IsInRole("ProjectManager"))
            {
                <div class="row  mt-3 mb-3 pl-0 col-11">
                    <a href="~/Project/Create" class="btn btn-primary col-3 ">New Project</a>
                </div>
            }


            <table class="table table-striped table-hover @*table-sm*@ border-dark pt-4 ">
                <thead>
                    <tr>
                        <th scope="col">

                        </th>
                        <th scope="col">
                            №
                        </th>
                        <th scope="col">
                            <a class="m-1">Name</a>
                        </th>
                        <th scope="col">
                            <a class="m-1">Condition</a>
                        </th>
                        <th scope="col">
                            <a class="m-1">Review Stage</a>
                        </th>
                        <th scope="col">
                            <a class="m-1">Start Date </a>
                        </th>
                        <th scope="col">
                            <a class="m-1">Deadline</a>
                        </th>
                        <th scope="col">
                            <a class="m-1">Cost ($)</a>
                        </th>
                        <th scope="col">
                            <a class="m-1">Tech. Stack</a>
                        </th>
                        <th scope="col">
                            <a class="m-1">Description</a>
                        </th>
                        <th scope="col">
                            <a class="m-1">Use Area</a>
                        </th>
                        <th scope="col">
                            <a class="m-1">Options</a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{ int i = 1;

                        foreach (var proj in Model)
                        {
                            <tr>
                                @if (User.IsInRole("ProjectManager"))
                                {
                                    <td class="pl-4 col-1">
                                        <a class="icons" data-title="Teams" asp-action="Show" asp-route-id="@proj.ProjectDTO.Id" asp-controller="Team">

                                            <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" fill="currentColor" class="bi bi-people" viewBox="0 0 20 20">
                                                <path d="M15 14s1 0 1-1-1-4-5-4-5 3-5 4 1 1 1 1h8zm-7.978-1A.261.261 0 0 1 7 12.996c.001-.264.167-1.03.76-1.72C8.312 10.629 9.282 10 11 10c1.717 0 2.687.63 3.24 1.276.593.69.758 1.457.76 1.72l-.008.002a.274.274 0 0 1-.014.002H7.022zM11 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4zm3-2a3 3 0 1 1-6 0 3 3 0 0 1 6 0zM6.936 9.28a5.88 5.88 0 0 0-1.23-.247A7.35 7.35 0 0 0 5 9c-4 0-5 3-5 4 0 .667.333 1 1 1h4.216A2.238 2.238 0 0 1 5 13c0-1.01.377-2.042 1.09-2.904.243-.294.526-.569.846-.816zM4.92 10A5.493 5.493 0 0 0 4 13H1c0-.26.164-1.03.76-1.724.545-.636 1.492-1.256 3.16-1.275zM1.5 5.5a3 3 0 1 1 6 0 3 3 0 0 1-6 0zm3-2a2 2 0 1 0 0 4 2 2 0 0 0 0-4z" />
                                            </svg>
                                        </a>
                                        <a class="icons" data-title="Steps" asp-action="Show" asp-route-id="@proj.ProjectDTO.Id" asp-controller="Step">

                                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-boxes" viewBox="0 0 20 20">
                                                <path d="M7.752.066a.5.5 0 0 1 .496 0l3.75 2.143a.5.5 0 0 1 .252.434v3.995l3.498 2A.5.5 0 0 1 16 9.07v4.286a.5.5 0 0 1-.252.434l-3.75 2.143a.5.5 0 0 1-.496 0l-3.502-2-3.502 2.001a.5.5 0 0 1-.496 0l-3.75-2.143A.5.5 0 0 1 0 13.357V9.071a.5.5 0 0 1 .252-.434L3.75 6.638V2.643a.5.5 0 0 1 .252-.434L7.752.066ZM4.25 7.504 1.508 9.071l2.742 1.567 2.742-1.567L4.25 7.504ZM7.5 9.933l-2.75 1.571v3.134l2.75-1.571V9.933Zm1 3.134 2.75 1.571v-3.134L8.5 9.933v3.134Zm.508-3.996 2.742 1.567 2.742-1.567-2.742-1.567-2.742 1.567Zm2.242-2.433V3.504L8.5 5.076V8.21l2.75-1.572ZM7.5 8.21V5.076L4.75 3.504v3.134L7.5 8.21ZM5.258 2.643 8 4.21l2.742-1.567L8 1.076 5.258 2.643ZM15 9.933l-2.75 1.571v3.134L15 13.067V9.933ZM3.75 14.638v-3.134L1 9.933v3.134l2.75 1.571Z" />
                                            </svg>
                                        </a>
                                    </td>
                                }
                                @if (User.IsInRole("Employee"))
                                {
                                    <td class="col-1 pl-5">
                                        <a class="icons justify-content-center" data-title="Tasks" asp-action="Show" asp-route-id="@proj.ProjectDTO.Id" asp-controller="Team">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor" class="bi bi-ui-checks" viewBox="0 0 20 20">
                                                <path d="M7 2.5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-7a.5.5 0 0 1-.5-.5v-1zM2 1a2 2 0 0 0-2 2v2a2 2 0 0 0 2 2h2a2 2 0 0 0 2-2V3a2 2 0 0 0-2-2H2zm0 8a2 2 0 0 0-2 2v2a2 2 0 0 0 2 2h2a2 2 0 0 0 2-2v-2a2 2 0 0 0-2-2H2zm.854-3.646a.5.5 0 0 1-.708 0l-1-1a.5.5 0 1 1 .708-.708l.646.647 1.646-1.647a.5.5 0 1 1 .708.708l-2 2zm0 8a.5.5 0 0 1-.708 0l-1-1a.5.5 0 0 1 .708-.708l.646.647 1.646-1.647a.5.5 0 0 1 .708.708l-2 2zM7 10.5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-7a.5.5 0 0 1-.5-.5v-1zm0-5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm0 8a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5z" />
                                            </svg>
                                        </a>
                                    </td>
                                }
                                <td scope="row">@i</td>
                                <td scope="row">@proj.ProjectDTO.Name</td>
                                <td scope="row">@proj.ConditionName</td>
                                <td scope="row">@proj.ReviewStageName</td>
                                <td scope="row">@proj.ProjectDTO.StartDate.ToShortDateString()</td>
                                <td scope="row">@proj.ProjectDTO.Deadline.ToShortDateString()</td>
                                <td scope="row">@proj.ProjectDTO.Cost</td>
                                <td scope="row">@proj.ProjectDTO.TechStack</td>
                                <td scope="row">@proj.ProjectDTO.Description</td>
                                <td scope="row">@proj.ProjectDTO.UseArea</td>
                                <td class="col-1 px-4">

                                    <a class="icons" data-title="Edit" asp-action="Edit" asp-route-id="@proj.ProjectDTO.Id" asp-controller="Project">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                                             class="bi bi-pencil-square" viewBox="0 0 20 20">
                                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                            <path fill-rule="evenodd"
                                                  d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                        </svg>
                                    </a>

                                    <a class="icons third" data-title="Remove" asp-controller="Project" asp-route-id="@proj.ProjectDTO.Id" asp-action="Delete">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                                             class="bi bi-trash" viewBox="0 0 20 20">
                                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                            <path fill-rule="evenodd"
                                                  d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                                        </svg>
                                    </a>

                                </td>
                            </tr>
                            i++;
                        } }
                </tbody>
            </table>
        </div>
    </div>

</div>

