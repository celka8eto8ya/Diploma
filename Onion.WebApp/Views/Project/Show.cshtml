        <div class="CreateProj col-12 pr-0">
           
            <div class="row  mt-3 mb-3 pl-5 ml-2 col-9">
                <a href="~/Project/Create" class="btn btn-primary col-3 ">New Project</a>
            </div>

            <table class="table table-striped table-hover @*table-sm*@ border-dark pt-4 ">
                <thead>
                    <tr>
                        <th scope="col">

                        </th>
                        <th scope="col">
                            №
                        </th>
                        <th scope="col">
                            <a class="m-1">Name</a>
                        </th>
                        <th scope="col">
                            <a class="m-1">Condition</a>
                        </th>
                        <th scope="col">
                            <a class="m-1">Review Stage</a>
                        </th>
                        <th scope="col">
                            <a class="m-1">Start Date </a>
                        </th>
                        <th scope="col">
                            <a class="m-1">Deadline</a>
                        </th>
                        <th scope="col">
                            <a class="m-1">Cost ($)</a>
                        </th>
                        <th scope="col">
                            <a class="m-1">Tech. Stack</a>
                        </th>
                        <th scope="col">
                            <a class="m-1">Description</a>
                        </th>
                        <th scope="col">
                            <a class="m-1">Use Area</a>
                        </th>
                        <th scope="col">
                            <a class="m-1">Options</a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{ int i = 1;

                        foreach (var proj in Model)
                        {
                            <tr>
                                <td  class="pl-4">
                                    <a class="icons" asp-action="Show" asp-route-id="@proj.ProjectDTO.Id" asp-controller="Team">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-folder2-open" viewBox="0 0 20 20">
                                            <path d="M1 3.5A1.5 1.5 0 0 1 2.5 2h2.764c.958 0 1.76.56 2.311 1.184C7.985 3.648 8.48 4 9 4h4.5A1.5 1.5 0 0 1 15 5.5v.64c.57.265.94.876.856 1.546l-.64 5.124A2.5 2.5 0 0 1 12.733 15H3.266a2.5 2.5 0 0 1-2.481-2.19l-.64-5.124A1.5 1.5 0 0 1 1 6.14V3.5zM2 6h12v-.5a.5.5 0 0 0-.5-.5H9c-.964 0-1.71-.629-2.174-1.154C6.374 3.334 5.82 3 5.264 3H2.5a.5.5 0 0 0-.5.5V6zm-.367 1a.5.5 0 0 0-.496.562l.64 5.124A1.5 1.5 0 0 0 3.266 14h9.468a1.5 1.5 0 0 0 1.489-1.314l.64-5.124A.5.5 0 0 0 14.367 7H1.633z" />
                                        </svg>
                                    </a>
                                </td>
                                <td scope="row">@i</td>
                                <td scope="row">@proj.ProjectDTO.Name</td>
                                <td scope="row">@proj.ConditionName</td>
                                <td scope="row">@proj.ReviewStageName</td>
                                <td scope="row">@proj.ProjectDTO.StartDate.ToShortDateString()</td>
                                <td scope="row">@proj.ProjectDTO.Deadline.ToShortDateString()</td>
                                <td scope="row">@proj.ProjectDTO.Cost</td>
                                <td scope="row">@proj.ProjectDTO.TechStack</td>
                                <td scope="row">@proj.ProjectDTO.Description</td>
                                <td scope="row">@proj.ProjectDTO.UseArea</td>
                                <td class="col-1 px-4">

                                    <a class="icons" asp-action="Edit" asp-route-id="@proj.ProjectDTO.Id" asp-controller="Project">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                                             class="bi bi-pencil-square" viewBox="0 0 20 20">
                                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                            <path fill-rule="evenodd"
                                                  d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                        </svg>
                                    </a>

                                    <a class="icons third" asp-controller="Project" asp-route-id="@proj.ProjectDTO.Id" asp-action="Delete">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                                             class="bi bi-trash" viewBox="0 0 20 20">
                                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                            <path fill-rule="evenodd"
                                                  d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                                        </svg>
                                    </a>

                                </td>
                            </tr>
                            i++;
                        } }
                </tbody>
            </table>
        </div>
    </div>

</div>

