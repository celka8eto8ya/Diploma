@model Onion.AppCore.DTO.TaskDTO



<form asp-action="Create" asp-controller="Task" asp-anti-forgery="true" method="post" enctype="multipart/form-data">

    <div class="container col-10 ">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
    </div>
    <div class="container col-10 ">
        <div class="InputSuccess">@ViewBag.CreateResult</div>
    </div>

    <div class="container col-5 justify-content-center mt-3 ">
        <h2 class="text-center">Create Task:</h2>

        <div class="row mt-4 justify-content-start">
            <div class="col-3">
                <label class="form-label" asp-for="Name">Name:</label>
            </div>
            <div class="col-9">
                <input type="text" name="Name" class="form-control" asp-for="Name" />
                <span asp-validation-for="Name" class="col-8" />
            </div>
        </div>

        <div class="row mt-3 justify-content-start">
            <div class="col-3">
                <label class="form-label" asp-for="Deadline">Deadline:</label>
            </div>
            <div class="col-9">
                <input type="date" name="Deadline" class="form-control" asp-for="Deadline" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="Deadline" class="col-8" />
            </div>
        </div>

        <div class="row mt-3 justify-content-start">
            <div class="col-3">
                <label class="form-label" asp-for="Cost">Cost:</label>
            </div>
            <div class="col-9">
                <input type="number" name="Cost" class="form-control" asp-for="Cost" />
                <span asp-validation-for="Cost" class="col-8" />
            </div>
        </div>

        <div class="row mt-3 justify-content-start">
            <div class="col-3">
                <label class="form-label" asp-for="Comment">Comment:</label>
            </div>
            <div class="col-9">
                <input type="text" name="Comment" class="form-control" asp-for="Comment" />
                <span asp-validation-for="Comment" class="col-8" />
            </div>
        </div>

        <div class="row mt-3 justify-content-start">
            <div class="col-3">
                <label class="form-label" asp-for="Complexity">Complexity:</label>
            </div>
            <div class="col-9">
                <input type="number" name="Complexity" class="form-control" asp-for="Complexity" />
                <span asp-validation-for="Complexity" class="col-8" />
            </div>
        </div>

        <div class="row  mt-4 justify-content-start">
            <div class="col-3">
                <label class="form-label" asp-for="StepId">For step (Name):</label>
            </div>
            <div class="col-9">

                <select class="form-select form-control" aria-label="Select" asp-for="StepId">
                    @{

                        foreach (var step in ViewBag.StepList)
                        {
                            <option class="form-control" selected value="@step.StepDTO.Id">@step.StepDTO.Name</option>
                        }
                    }
                </select>
                <span asp-validation-for="StepId" class="col-8"></span>
            </div>
        </div>

        <div class="row  justify-content-center mb-5">
            <input class="btn btn-primary mt-4 col-4 NewProject" type="submit" value="Create">
        </div>
    </div>
</form>



@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}